{
  "buildCommand": "chmod +x build-vercel.sh && ./build-vercel.sh",
  "installCommand": "npm install",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_BACKEND_URL": "https://jaime.capital/api",
    "NEXT_PUBLIC_SOCKET_URL": "wss://jaime.capital",
    "NEXT_PUBLIC_API_URL": "https://jaime.capital/api"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
    }
  }
}
